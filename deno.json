{
  "tasks": {
    "dev": "deno run --allow-read --allow-env --allow-sys --allow-net src/index.ts",
    "deps:update": "deno cache --lock=deno.lock --lock-write src/deps.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": false
  }
}
